                    <li><a href="https://github.com/mountmike"><i class='fa fa-github'></i> Mike</a></li>
                </ul>
            </div>
            <footer>&copy; 2023 CALM </footer>

        </section>
    </aside>
    <main>
        <!--The div element for the map -->
        <div id="map"></div>
    </main>
    <aside class="right">
        <section class="date">
            <i class="fa-regular fa-clock fa-lg"> </i>
            <p id="timeOutput"></p>
        </section>
        <section class="map-center">
            <div class="heading-wrapper">
                <i class="fa-solid fa-location-crosshairs fa-lg"></i>
                <h3>Map Center</h3>
            </div>
            <div class="map-center-info"></div>
            <div class="map-center-address"></div>
        </section>
        <section class="nearest">
            <div class="heading-wrapper">
                <i class="fa-solid fa-location-dot fa-lg"></i>
                <h3>Nearest</h3>
            </div>
            <div class="nearest-results"></div>
        </section>
    </aside>

